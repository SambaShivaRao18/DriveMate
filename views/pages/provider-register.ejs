<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <% if (user.role === 'fuel-station') { %>
                            ‚õΩ Register Your Fuel Station
                        <% } else { %>
                            üîß Register Your Mechanic Shop
                        <% } %>
                    </h4>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>
                    
                    <form action="/provider/register" method="POST" id="providerRegisterForm" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Business Name *</label>
                            <input type="text" class="form-control" name="businessName" required
                                   placeholder="e.g., Shell Fuel Station, City Auto Repair">
                        </div>

                        <!-- COORDINATES SECTION -->
                        <div class="mb-3">
                            <label class="form-label">Business Location *</label>
                            <div class="alert alert-info">
                                <h6>üìç How to get your exact coordinates:</h6>
                                <ol class="mb-0">
                                    <li>Open <strong>Google Maps</strong> on your phone/computer</li>
                                    <li>Search for your business name or address</li>
                                    <li>Long-press on your <strong>exact business location</strong></li>
                                    <li>Copy the coordinates that appear (e.g., <code>17.4484, 78.3819</code>)</li>
                                    <li>Paste them below</li>
                                </ol>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Latitude *</label>
                                    <input type="number" step="0.000001" class="form-control" name="latitude"
                                           placeholder="e.g., 17.4484" required>
                                    <div class="form-text">From Google Maps (first number)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Longitude *</label>
                                    <input type="number" step="0.000001" class="form-control" name="longitude"
                                           placeholder="e.g., 78.3819" required>
                                    <div class="form-text">From Google Maps (second number)</div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Business Address</label>
                            <textarea class="form-control" name="address" rows="2"
                                      placeholder="Will be auto-filled from your coordinates (or enter manually)"></textarea>
                            <div class="form-text">Leave empty to auto-fill from coordinates</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number *</label>
                            <input type="tel" class="form-control" name="phone"
                                   value="<%= user.phone %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" name="email"
                                   value="<%= user.email %>" required>
                        </div>

                        <% if (user.role === 'mechanic') { %>
                        <div class="mb-3">
                            <label class="form-label">Services Offered *</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="engine repair" checked>
                                        <label class="form-check-label">Engine Repair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="tyre change" checked>
                                        <label class="form-check-label">Tyre Change</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="battery replacement" checked>
                                        <label class="form-check-label">Battery Replacement</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="brake repair">
                                        <label class="form-check-label">Brake Repair</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="ac service">
                                        <label class="form-check-label">AC Service</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="electrical repair">
                                        <label class="form-check-label">Electrical Repair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="general service">
                                        <label class="form-check-label">General Service</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="services" value="fuel delivery">
                                        <label class="form-check-label">Fuel Delivery</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Assistance Fee (‚Çπ) *</label>
                                    <input type="number" class="form-control" name="assistanceFee"
                                           value="<%= user.role === 'fuel-station' ? '100' : '150' %>"
                                           min="50" max="1000" required>
                                    <div class="form-text">Base fee for providing assistance</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Travel Fee per Km (‚Çπ) *</label>
                                    <input type="number" class="form-control" name="travelFeePerKm"
                                           value="10" min="5" max="50" required>
                                    <div class="form-text">Charged per km traveled to reach customer</div>
                                </div>
                            </div>
                        </div>

                        <% if (user.role === 'fuel-station') { %>
                        <div class="mb-3">
                            <h6>Fuel Prices (‚Çπ)</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label">Petrol per Liter</label>
                                    <input type="number" step="0.1" class="form-control" name="petrolPrice" value="96.7" min="50" max="200">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Diesel per Liter</label>
                                    <input type="number" step="0.1" class="form-control" name="dieselPrice" value="89.6" min="50" max="200">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">CNG per Kg</label>
                                    <input type="number" step="0.1" class="form-control" name="cngPrice" value="75.3" min="40" max="150">
                                </div>
                            </div>
                        </div>
                        <% } %>

                        <!-- BUSINESS PHOTOS SECTION -->
                        <% if (user.role === 'mechanic') { %>
                        <div class="mb-3">
                            <h6>üè¢ Business Photos (Optional)</h6>
                            <div class="alert alert-info">
                                <small>Upload up to 3 photos of your workshop, tools, or previous work to build trust with customers</small>
                            </div>
                            
                            <div class="mb-2">
                                <input type="file" class="form-control" name="businessPhotos" 
                                       id="businessPhotos" multiple accept="image/*" 
                                       onchange="previewBusinessPhotos(this)">
                                <div class="form-text">Maximum 3 photos, 5MB each. Formats: JPG, PNG, WebP</div>
                            </div>
                            
                            <div id="businessPhotosPreview" class="row mt-2"></div>
                        </div>
                        <% } else if (user.role === 'fuel-station') { %>
                        <div class="mb-3">
                            <h6>üè¢ Business Photos (Optional)</h6>
                            <div class="alert alert-info">
                                <small>Upload photos of your fuel station, pumps, or facility to build trust with customers</small>
                            </div>
                            
                            <div class="mb-2">
                                <input type="file" class="form-control" name="businessPhotos" 
                                       id="businessPhotos" multiple accept="image/*" 
                                       onchange="previewBusinessPhotos(this)">
                                <div class="form-text">Maximum 3 photos, 5MB each. Formats: JPG, PNG, WebP</div>
                            </div>
                            
                            <div id="businessPhotosPreview" class="row mt-2"></div>
                        </div>
                        <% } %>

                        <!-- PAYMENT METHODS SECTION -->
                        <div class="mb-3">
                            <h6>üí≥ Payment Methods</h6>
                            <div class="alert alert-info">
                                <small>Select payment methods you want to accept from customers</small>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="paymentMethods" value="cash" checked disabled>
                                        <label class="form-check-label">
                                            üíµ Cash (Always Available)
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="paymentMethods" value="qr" id="qrPaymentCheckbox" checked>
                                        <label class="form-check-label">
                                            üì± QR Code Payments
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- QR CODE PAYMENT SECTION -->
                        <div class="mb-3" id="qrCodeSection">
                            <h6>üì± QR Code Payment Setup</h6>
                            <div class="alert alert-success">
                                <small>
                                    ‚úÖ <strong>Free & Instant:</strong> Upload your UPI QR code.
                                    Customers can scan and pay directly to you after service completion.
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Your UPI ID *</label>
                                <input type="text" class="form-control" name="upiId" id="upiIdInput"
                                       placeholder="e.g., yourname@ybl, yourname@paytm, yourname@okicici" required>
                                <div class="form-text">This is where customers will send QR payments</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Upload UPI QR Code *</label>
                                <input type="file" class="form-control" name="qrCode" id="qrCodeInput" accept="image/*" required>
                                <div class="form-text">
                                    <strong>How to get QR code:</strong><br>
                                    1. Open your bank app (PhonePe, GPay, Paytm, etc.)<br>
                                    2. Go to UPI/QR Code section<br>
                                    3. Download or screenshot your QR code<br>
                                    4. Upload it here
                                </div>
                            </div>
                            
                            <div class="alert alert-info">
                                <small>
                                    üí° <strong>Tip:</strong> Make sure your QR code is clear and readable.
                                    Test it by scanning with another phone before uploading.
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" required id="termsCheck">
                                <label class="form-check-label" for="termsCheck">
                                    I confirm that the business information provided is accurate and I am authorized to represent this business
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <% if (user.role === 'fuel-station') { %>
                                ‚õΩ Register Fuel Station
                            <% } else { %>
                                üîß Register Mechanic Shop
                            <% } %>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
<%- include('../partials/scripts') %>

<script>
// Toggle QR code section based on checkbox
document.addEventListener('DOMContentLoaded', function() {
    const qrCheckbox = document.getElementById('qrPaymentCheckbox');
    const qrSection = document.getElementById('qrCodeSection');
    const upiInput = document.getElementById('upiIdInput');
    const qrInput = document.getElementById('qrCodeInput');
    
    function toggleQRSection() {
        if (qrCheckbox.checked) {
            qrSection.style.display = 'block';
            upiInput.required = true;
            qrInput.required = true;
        } else {
            qrSection.style.display = 'none';
            upiInput.required = false;
            qrInput.required = false;
        }
    }
    
    // Initial state
    toggleQRSection();
    
    // Add event listener
    qrCheckbox.addEventListener('change', toggleQRSection);
});

// Preview business photos for registration
function previewBusinessPhotos(input) {
    const preview = document.getElementById('businessPhotosPreview');
    preview.innerHTML = '';
    
    if (input.files && input.files.length > 0) {
        const files = Array.from(input.files).slice(0, 3); // Limit to 3 files
        
        files.forEach((file, index) => {
            if (file.type.startsWith('image/')) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const col = document.createElement('div');
                    col.className = 'col-4 mb-2';
                    col.innerHTML = `
                        <div class="photo-preview-card">
                            <img src="${e.target.result}" class="img-thumbnail business-photo-preview w-100">
                            <small class="d-block text-center mt-1">Photo ${index + 1}</small>
                        </div>
                    `;
                    preview.appendChild(col);
                };
                
                reader.readAsDataURL(file);
            }
        });
        
        if (files.length > 0) {
            // Show alert using existing function
            if (typeof showAlert === 'function') {
                showAlert(`‚úÖ ${files.length} business photo(s) selected`, 'info');
            } else {
                alert(`‚úÖ ${files.length} business photo(s) selected`);
            }
        }
    }
}
</script>

<style>
.business-photo-preview {
    max-height: 150px;
    object-fit: cover;
}
.photo-preview-card {
    position: relative;
}
</style>